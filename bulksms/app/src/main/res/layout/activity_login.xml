<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation ="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giriş Yap"
            android:textAlignment="center"
            android:textColor="@color/mypink"
            android:textSize="38sp" />

        <EditText
            android:id="@+id/login_editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="E-posta"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:textColorHint="#7A7575" />

        <EditText
            android:id="@+id/login_editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:textColorHint="#7A7575" />

        <Button
            android:id="@+id/login_giris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="16dp"

            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="Giriş Yap"
            app:rippleColor="#673AB7" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:text="Ya da "
            android:textAlignment="center"
            android:textColor="@color/myorange"
            android:textSize="24sp" />

        <Button
            android:id="@+id/login_kayit"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="16dp"

            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="Kayıt ol" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="201913709003 - Dilan Şaşkın"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>