<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.create_message.Create_message">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Mesaj Adı"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/createmessage_messageNameEditText"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="mesaj başlığınız"
                android:inputType="text"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:text="Mesaj"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/createmessage_messageDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/input"
                android:ems="10"
                android:gravity="top|left"
                android:hint="mesajınız"
                android:inputType="textMultiLine|text"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp" />

            <Button
                android:id="@+id/createmessage_createMessageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Mesaj Oluştur" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gruplar"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/createmessage_messagesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="201913709003 - Dilan Şaşkın"
            android:textAlignment="center" />

    </LinearLayout>
</FrameLayout>